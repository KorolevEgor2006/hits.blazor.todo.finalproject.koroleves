@page "/admin/users"
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using TheFinalProject.Data.Models
@using TheFinalProject.Data.Interfaces
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject NavigationManager NavigationManager
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthenticationStateProvider
<PageTitle>Управление пользователями</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people-fill me-2"></i> Управление пользователями</h1>
        <button class="btn btn-outline-primary" @onclick="RefreshUsers">
            <i class="bi bi-arrow-clockwise"></i> Обновить
        </button>
    </div>
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Всего пользователей</h6>
                            <h3 class="mb-0">@(users?.Count ?? 0)</h3>
                        </div>
                        <i class="bi bi-people fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Студенты</h6>
                            <h3 class="mb-0">@studentCount</h3>
                        </div>
                        <i class="bi bi-person fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Преподаватели</h6>
                            <h3 class="mb-0">@instructorCount</h3>
                        </div>
                        <i class="bi bi-person-badge fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Администраторы</h6>
                            <h3 class="mb-0">@adminCount</h3>
                        </div>
                        <i class="bi bi-shield-check fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Поиск по имени, email или роли..."
                               @bind="searchTerm" @bind:event="oninput" />
                        @if (!string.IsNullOrEmpty(searchTerm))
                        {
                            <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                                <i class="bi bi-x"></i>
                            </button>
                        }
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <select class="form-select" @bind="roleFilter">
                        <option value="">Все роли</option>
                        <option value="Student">Студент</option>
                        <option value="Instructor">Преподаватель</option>
                        <option value="Admin">Администратор</option>
                    </select>
                </div>
                <div class="col-md-3 mb-3">
                    <select class="form-select" @bind="statusFilter">
                        <option value="">Все статусы</option>
                        <option value="Active">Активные</option>
                        <option value="Inactive">Неактивные</option>
                        <option value="Locked">Заблокированные</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Пользователи системы</h5>
        </div>
        <div class="card-body p-0">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Загрузка...</span>
                    </div>
                </div>
            }
            else if (!filteredUsers.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Пользователи не найдены</h5>
                    <p class="text-muted">@(string.IsNullOrEmpty(searchTerm) ? "В системе пока нет пользователей" : "Попробуйте изменить критерии поиска")</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Пользователь</th>
                                <th>Email</th>
                                <th>Роли</th>
                                <th>Статус</th>
                                <th>Дата регистрации</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in filteredUsers)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0 me-3">
                                                @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                                {
                                                    <img src="@user.ProfilePictureUrl" class="rounded-circle"
                                                         style="width: 40px; height: 40px; object-fit: cover;"
                                                         alt="@user.FullName" />
                                                }
                                                else
                                                {
                                                    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center"
                                                         style="width: 40px; height: 40px;">
                                                        <span class="text-white">
                                                            @user.FirstName?.FirstOrDefault()@user.LastName?.FirstOrDefault()
                                                        </span>
                                                    </div>
                                                }
                                            </div>
                                            <div class="flex-grow-1">
                                                <div class="fw-bold">@user.FullName</div>
                                                <small class="text-muted">ID: @user.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var role in user.UserRoles)
                                            {
                                                <span class="badge @GetRoleBadgeClass(role)">
                                                    @GetRoleDisplayName(role)
                                                </span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (user.LockoutEnd.HasValue && user.LockoutEnd.Value > DateTimeOffset.Now)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-lock me-1"></i>Заблокирован
                                            </span>
                                        }
                                        else if (user.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Активен
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-exclamation-triangle me-1"></i>Не подтвержден
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small>@user.RegistrationDate.ToString("dd.MM.yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary"
                                                    title="Изменить роли"
                                                    @onclick="() => OpenEditRolesModal(user)">
                                                <i class="bi bi-person-gear"></i>
                                            </button>
                                            <button class="btn btn-outline-info"
                                                    title="Просмотр профиля"
                                                    @onclick="() => ViewProfile(user.Id)">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            @if (user.LockoutEnd.HasValue && user.LockoutEnd.Value > DateTimeOffset.Now)
                                            {
                                                <button class="btn btn-outline-success"
                                                        title="Разблокировать"
                                                        @onclick="() => UnlockUser(user)">
                                                    <i class="bi bi-unlock"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-outline-warning"
                                                        title="Заблокировать"
                                                        @onclick="() => LockUser(user)">
                                                    <i class="bi bi-lock"></i>
                                                </button>
                                            }
                                            <button class="btn btn-outline-danger"
                                                    title="Удалить"
                                                    @onclick="() => ConfirmDeleteUser(user)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">
                        Показано @filteredUsers.Count из @(users?.Count ?? 0) пользователей
                    </small>
                </div>
                <div>
                    <button class="btn btn-sm btn-outline-secondary me-2"
                            disabled="@(currentPage <= 1)"
                            @onclick="() => ChangePage(currentPage - 1)">
                        <i class="bi bi-chevron-left"></i> Назад
                    </button>
                    <span class="mx-2">Страница @currentPage</span>
                    <button class="btn btn-sm btn-outline-secondary ms-2"
                            disabled="@(currentPage >= totalPages)"
                            @onclick="() => ChangePage(currentPage + 1)">
                        Вперед <i class="bi bi-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@if (showEditRolesModal && selectedUser != null)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);"
         @onclick="CloseEditRolesModal">
        <div class="modal-dialog modal-dialog-centered" @onclick:stopPropagation="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-person-gear me-2"></i>Редактирование ролей
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseEditRolesModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <h6>Пользователь: @selectedUser.FullName</h6>
                        <p class="text-muted">Email: @selectedUser.Email</p>
                    </div>

                    <div class="mb-4">
                        <h6>Доступные роли:</h6>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox"
                                   id="roleStudent"
                                   checked="@selectedUserRoles.Contains("Student")"
                                   @onchange='(e) => UpdateRoleSelection("Student", e)' />
                            <label class="form-check-label" for="roleStudent">
                                <span class="badge bg-primary">Студент</span>
                                <small class="text-muted ms-2">Может записываться на курсы и проходить обучение</small>
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox"
                                   id="roleInstructor"
                                   checked="@selectedUserRoles.Contains("Instructor")"
                                   @onchange='(e) => UpdateRoleSelection("Instructor", e)' />
                            <label class="form-check-label" for="roleInstructor">
                                <span class="badge bg-warning text-dark">Преподаватель</span>
                                <small class="text-muted ms-2">Может создавать и редактировать курсы</small>
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox"
                                   id="roleAdmin"
                                   checked="@selectedUserRoles.Contains("Admin")"
                                   @onchange='(e) => UpdateRoleSelection(" Admin", e)' />
                            <label class="form-check-label" for="roleAdmin">
                                <span class="badge bg-danger">Администратор</span>
                                <small class="text-muted ms-2">Полный доступ ко всем функциям системы</small>
                            </label>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <h6><i class="bi bi-info-circle"></i> Информация</h6>
                        <small>
                            <ul class="mb-0 ps-3">
                                <li>Пользователь может иметь несколько ролей одновременно</li>
                                <li>Администратор автоматически получает права преподавателя</li>
                                <li>Изменения вступят в силу немедленно</li>
                            </ul>
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseEditRolesModal">
                        Отмена
                    </button>
                    <button type="button" class="btn btn-primary"
                            @onclick="SaveUserRoles"
                            disabled="@isSavingRoles">
                        @if (isSavingRoles)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Сохранение...</span>
                        }
                        else
                        {
                            <i class="bi bi-save me-2"></i>
                            <span>Сохранить изменения</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<UserViewModel>? users;
    private List<UserViewModel> filteredUsers = new();
    private UserViewModel? selectedUser;
    private List<string> selectedUserRoles = new();
    private bool showEditRolesModal = false;
    private bool isLoading = true;
    private bool isSavingRoles = false;
    private string searchTerm = string.Empty;
    private string roleFilter = string.Empty;
    private string statusFilter = string.Empty;
    private int currentPage = 1;
    private int pageSize = 20;
    private int totalPages = 1;
    private int studentCount = 0;
    private int instructorCount = 0;
    private int adminCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var allUsers = await UserManager.Users.ToListAsync();
            users = new List<UserViewModel>();

            foreach (var user in allUsers)
            {
                var roles = await UserManager.GetRolesAsync(user);
                var userVm = new UserViewModel
                {
                    Id = user.Id,
                    UserName = user.UserName!,
                    Email = user.Email!,
                    FirstName = user.FirstName,
                    LastName = user.LastName,
                    FullName = user.FullName,
                    ProfilePictureUrl = user.ProfilePictureUrl,
                    RegistrationDate = user.RegistrationDate,
                    EmailConfirmed = user.EmailConfirmed,
                    LockoutEnd = user.LockoutEnd,
                    UserRoles = roles.ToList()
                };

                users.Add(userVm);
            }

            UpdateStatistics();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            await ShowError($"Ошибка загрузки пользователей: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void UpdateStatistics()
    {
        if (users == null) return;

        studentCount = users.Count(u => u.UserRoles.Contains("Student"));
        instructorCount = users.Count(u => u.UserRoles.Contains("Instructor"));
        adminCount = users.Count(u => u.UserRoles.Contains("Admin"));
    }

    private void ApplyFilters()
    {
        if (users == null) return;

        var query = users.AsEnumerable();

        // Поиск по тексту
        if (!string.IsNullOrEmpty(searchTerm))
        {
            var term = searchTerm.ToLower();
            query = query.Where(u =>
                u.FullName.ToLower().Contains(term) ||
                u.Email.ToLower().Contains(term) ||
                u.UserRoles.Any(r => r.ToLower().Contains(term))
            );
        }

        // Фильтр по роли
        if (!string.IsNullOrEmpty(roleFilter))
        {
            query = query.Where(u => u.UserRoles.Contains(roleFilter));
        }

        // Фильтр по статусу
        if (!string.IsNullOrEmpty(statusFilter))
        {
            switch (statusFilter)
            {
                case "Active":
                    query = query.Where(u => u.EmailConfirmed &&
                        (!u.LockoutEnd.HasValue || u.LockoutEnd.Value <= DateTimeOffset.Now));
                    break;
                case "Inactive":
                    query = query.Where(u => !u.EmailConfirmed);
                    break;
                case "Locked":
                    query = query.Where(u => u.LockoutEnd.HasValue &&
                        u.LockoutEnd.Value > DateTimeOffset.Now);
                    break;
            }
        }

        filteredUsers = query.ToList();

        // Пагинация
        totalPages = (int)Math.Ceiling((double)filteredUsers.Count / pageSize);
        filteredUsers = filteredUsers
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();
    }

    private async void RefreshUsers()
    {
        await LoadUsers();
    }

    private void ClearSearch()
    {
        searchTerm = string.Empty;
        ApplyFilters();
        StateHasChanged();
    }

    private void ChangePage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            ApplyFilters();
            StateHasChanged();
        }
    }

    private async Task OpenEditRolesModal(UserViewModel user)
    {
        selectedUser = user;
        selectedUserRoles = new List<string>(user.UserRoles);
        showEditRolesModal = true;
        StateHasChanged();
    }

    private void CloseEditRolesModal()
    {
        showEditRolesModal = false;
        selectedUser = null;
        selectedUserRoles.Clear();
        StateHasChanged();
    }

    private void UpdateRoleSelection(string role, object isChecked)
    {
        var checkedValue = (bool)(isChecked ?? false);

        if (checkedValue)
        {
            if (!selectedUserRoles.Contains(role))
                selectedUserRoles.Add(role);
        }
        else
        {
            selectedUserRoles.Remove(role);
        }
        if (role == "Admin" && checkedValue && !selectedUserRoles.Contains("Instructor"))
        {
            selectedUserRoles.Add("Instructor");
        }
    }

    private async Task SaveUserRoles()
    {
        if (selectedUser == null) return;

        isSavingRoles = true;
        StateHasChanged();

        try
        {
            var user = await UserManager.FindByIdAsync(selectedUser.Id);
            if (user == null)
            {
                await ShowError("Пользователь не найден");
                return;
            }
            var currentRoles = await UserManager.GetRolesAsync(user);
            var removeResult = await UserManager.RemoveFromRolesAsync(user, currentRoles);
            if (!removeResult.Succeeded)
            {
                await ShowError($"Ошибка удаления ролей: {string.Join(", ", removeResult.Errors.Select(e => e.Description))}");
                return;
            }
            var addResult = await UserManager.AddToRolesAsync(user, selectedUserRoles);
            if (!addResult.Succeeded)
            {
                await ShowError($"Ошибка добавления ролей: {string.Join(", ", addResult.Errors.Select(e => e.Description))}");
                return;
            }

            await ShowSuccess("Роли успешно обновлены");
            selectedUser.UserRoles = selectedUserRoles;
            UpdateStatistics();

            CloseEditRolesModal();
            await LoadUsers();
        }
        catch (Exception ex)
        {
            await ShowError($"Ошибка сохранения ролей: {ex.Message}");
        }
        finally
        {
            isSavingRoles = false;
            StateHasChanged();
        }
    }

    private async Task LockUser(UserViewModel user)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", $"Заблокировать пользователя {user.FullName}? Пользователь не сможет войти в систему.");

        if (confirmed)
        {
            try
            {
                var appUser = await UserManager.FindByIdAsync(user.Id);
                if (appUser == null) return;

                var result = await UserManager.SetLockoutEndDateAsync(appUser, DateTimeOffset.Now.AddDays(30));
                if (result.Succeeded)
                {
                    await ShowSuccess($"Пользователь {user.FullName} заблокирован на 30 дней");
                    await LoadUsers();
                }
                else
                {
                    await ShowError($"Ошибка блокировки: {string.Join(", ", result.Errors.Select(e => e.Description))}");
                }
            }
            catch (Exception ex)
            {
                await ShowError($"Ошибка: {ex.Message}");
            }
        }
    }

    private async Task UnlockUser(UserViewModel user)
    {
        try
        {
            var appUser = await UserManager.FindByIdAsync(user.Id);
            if (appUser == null) return;

            var result = await UserManager.SetLockoutEndDateAsync(appUser, null);
            if (result.Succeeded)
            {
                await ShowSuccess($"Пользователь {user.FullName} разблокирован");
                await LoadUsers();
            }
            else
            {
                await ShowError($"Ошибка разблокировки: {string.Join(", ", result.Errors.Select(e => e.Description))}");
            }
        }
        catch (Exception ex)
        {
            await ShowError($"Ошибка: {ex.Message}");
        }
    }

    private async Task ConfirmDeleteUser(UserViewModel user)
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var currentUser = authState.User;
        var currentUserId = currentUser.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (user.Id == currentUserId)
        {
            await ShowError("Вы не можете удалить свой собственный аккаунт");
            return;
        }

        var confirmed = await JS.InvokeAsync<bool>("confirm", $"Вы уверены, что хотите удалить пользователя {user.FullName}? Это действие нельзя отменить.");

        if (confirmed)
        {
            await DeleteUser(user);
        }
    }

    private async Task DeleteUser(UserViewModel user)
    {
        try
        {
            var appUser = await UserManager.FindByIdAsync(user.Id);
            if (appUser == null) return;

            var result = await UserManager.DeleteAsync(appUser);
            if (result.Succeeded)
            {
                await ShowSuccess($"Пользователь {user.FullName} удален");
                await LoadUsers();
            }
            else
            {
                await ShowError($"Ошибка удаления: {string.Join(", ", result.Errors.Select(e => e.Description))}");
            }
        }
        catch (Exception ex)
        {
            await ShowError($"Ошибка: {ex.Message}");
        }
    }

    private void ViewProfile(string userId)
    {
        NavigationManager.NavigateTo($"/admin/user-profile/{userId}");
    }

    private string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Student" => "bg-primary",
            "Instructor" => "bg-warning text-dark",
            "Admin" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetRoleDisplayName(string role)
    {
        return role switch
        {
            "Student" => "Студент",
            "Instructor" => "Преподаватель",
            "Admin" => "Администратор",
            _ => role
        };
    }

    private async Task ShowSuccess(string message)
    {
        await JS.InvokeVoidAsync("showToast", "success", message);
    }

    private async Task ShowError(string message)
    {
        await JS.InvokeVoidAsync("showToast", "error", message);
    }

    // ViewModel для отображения пользователей
    private class UserViewModel
    {
        public string Id { get; set; } = string.Empty;
        public string UserName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string FirstName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string FullName { get; set; } = string.Empty;
        public string? ProfilePictureUrl { get; set; }
        public DateTime RegistrationDate { get; set; }
        public bool EmailConfirmed { get; set; }
        public DateTimeOffset? LockoutEnd { get; set; }
        public List<string> UserRoles { get; set; } = new();
    }
}